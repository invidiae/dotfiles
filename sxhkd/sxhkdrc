#
# wm independent hotkeys
#
super + {t, w, shift+w, d, shift+d}
	{alacritty, brave, firefox, alacritty -e ranger, thunar}

super + 2
# program launcher
super + @space
	rofi -modi "combi,drun" -show combi -display-combi '' -display-drun '' -theme config
# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

###########################
#####  BSPWM hotkeys  #####
###########################

# quit/rest bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# toggle fullscreen
super + f
	bspc desktop -l next

	#bspc node -t "~"fullscreen
# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + Return
	bspc node -s biggest.local

#
# state/flags
#

# set the window state

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {c,shift + c}
	{networkmanager_dmenu,termite -e nmtui}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

#dmenu-qutebrowser
super + {o}
    ~/.scripts/dmenu_qutebrowser

# focus or send to the given desktop
super + {_,shift + ,ctrl +}{1-9}
	bspc {desktop -f,node -d, node -d} '^{1-9}' {_,_,--follow}

#
# preselect
#

# preselect the direction
#super + ctrl + {h,j,k,l}
#	bspc node -p {west,south,north,east}

# preselect the ratio

# cancel the preselection for the focused node
#super + ctrl + space
#	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# resize windows
super + ctrl + {h,j,k,l}
	~/scripts/resize_bspwm {west,south,north,east}

# toggle floating
super + shift + space
    bspc node -t tiled || bspc node -t floating
# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

########################
#####  Audio Keys  #####
########################

# Toggle mute
F1
	pactl set-sink-mute @DEFAULT_SINK@  0 toggle

# Increase/decrease volume.
{F3, F2}
	pactl set-sink-volume @DEFAULT_SINK@ {+, -}5%

super + BackSpace
	rofi -show powermenu -modi powermenu:~/scripts/rofi-powermenu

# Screenshot with selection
super + shift + s
	scrot -a $(slop -f '%x,%y,%w,%h') -e 'mv $f ~/Bilder/Screenshots'


# Screenshot whole screen.
super + s
	scrot '/home/camillo/Bilder/Screenshots/%Y-%m-%d-%H-%M-%S.png'

# change gaps
super + {minus, plus}
	bspc config window_gap "$(($(bspc config window_gap) {+, -} 5))"

# Rofi clipboard menu FIXME
super + v
	rofi  -modi "clipboard:greenclip print" -show clipboard
